<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/im_item_news_list"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray"
        android:padding="1dp"

        />
    <TextView
        android:id="@+id/tv_news_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/im_item_news_list"
        android:text="2022-03-03"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tv_news_list_time"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_news_list_title"
        android:layout_toRightOf="@id/im_item_news_list"
        android:text="2034322-03-03"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/icon_news_comment_num"
        />

</RelativeLayout>
